//users table in the database

CREATE TABLE `usaa`.`users` ( `card_no` VARCHAR(20) NOT NULL , `passport_no` VARCHAR(20) NOT NULL , `first` VARCHAR(255) NOT NULL , `second` VARCHAR(255) NOT NULL , `email` VARCHAR(255) NOT NULL , `phone` VARCHAR(15) NOT NULL , `passhash` VARCHAR(255) NOT NULL , `wilaya` VARCHAR(255) NOT NULL , `year` VARCHAR(255) NOT NULL , `course` VARCHAR(255) NOT NULL , `versity` VARCHAR(255) NOT NULL , `dob` VARCHAR(10) NOT NULL , `gender` ENUM("F","M") NOT NULL , `AC_type` ENUM("A","S","N") NOT NULL , `status` ENUM("active", "inactive", "Locked", "Pending") NOT NULL , `message` VARCHAR(255) NOT NULL , `created_at` DATETIME NOT NULL , `parent_name` VARCHAR(255) NOT NULL , `parent_contact` VARCHAR(15) NOT NULL , `home` VARCHAR(255) NOT NULL , `nationality` VARCHAR(255) NOT NULL , `doi` VARCHAR(10) NOT NULL , `dob2` VARCHAR(10) NOT NULL , `code1` VARCHAR(10) NOT NULL , `code2` VARCHAR(10) NOT NULL , `year_of_entry` YEAR NOT NULL , `work` ENUM("None","Representative") NOT NULL , PRIMARY KEY (`passport_no`), UNIQUE (`card_no`, `email`, `phone`)) ENGINE = InnoDB;

//posts table in the usaa database
CREATE TABLE `usaa`.`posts` ( `id` INT NOT NULL AUTO_INCREMENT , `passport_no` VARCHAR(20) NOT NULL , `post` VARCHAR(255) NOT NULL , `approved` BOOLEAN NOT NULL , `created_by` VARCHAR(20) NOT NULL , `wilaya` VARCHAR(255) NOT NULL , `created_at` TIMESTAMP NOT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;

//events tablesin the database
CREATE TABLE `usaa`.`events` ( `id` INT NOT NULL AUTO_INCREMENT , `passport_no` VARCHAR(15) NOT NULL , `type` ENUM("E","A") NOT NULL , `title` VARCHAR(30) NOT NULL , `description` VARCHAR(255) NOT NULL , `created_by` VARCHAR(255) NOT NULL , `created_at` TIMESTAMP NOT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;

