//add the msg_state field in the user's table
ALTER TABLE `users` ADD `msg_state` VARCHAR(255) NOT NULL AFTER `status`; 


//bank accounts details 
CREATE TABLE `usaa`.`bdetails` ( `Names` VARCHAR(255) NOT NULL , `personal_address` VARCHAR(255) NOT NULL , `Account_no` INT(20) NOT NULL , `Bank_name` VARCHAR(255) NOT NULL , `Bank_Address` VARCHAR(255) NOT NULL , `AccountType` ENUM("Dollar($)","Euro($)") NOT NULL , `Submitted_at` DATETIME NOT NULL , `passsport_no` VARCHAR(20) NOT NULL , PRIMARY KEY (`Account_no`)) ENGINE = InnoDB;


//adding the time row in nottification table
ALTER TABLE `Notifications` ADD `created_at` DATETIME NOT NULL AFTER `status`;


//course change request table 
CREATE TABLE `usaa`.`coursechange` ( `id` INT NOT NULL AUTO_INCREMENT , `passport_no` VARCHAR(20) NOT NULL , `names` VARCHAR(255) NOT NULL , `previouscourse` VARCHAR(255) NOT NULL , `course1` VARCHAR(255) NOT NULL , `course2` VARCHAR(255) NOT NULL , `wilaya1` VARCHAR(255) NOT NULL , `wilaya2` VARCHAR(255) NOT NULL , `reaason` VARCHAR(255) NOT NULL , `submitted_at` DATETIME NOT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;


//track record for students 
CREATE TABLE `usaa`.`track_record` ( `id` INT NOT NULL AUTO_INCREMENT , `passport_no` VARCHAR(20) NOT NULL , `courseaplications` INT(11) NOT NULL , `bankaccount` ENUM("Yes","No") NOT NULL , `no_of_suggestions` INT(11) NOT NULL , `no_of_posts` INT(11) NOT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;


//altering the notification database
ALTER TABLE `Notifications` ADD `sender` VARCHAR(20) NOT NULL AFTER `created_at`;

//mpification of the events table
ALTER TABLE `events` ADD `date` VARCHAR(20) NOT NULL AFTER `description`;

//adding the swift code row 
ALTER TABLE `bdetails` ADD `swift_code` VARCHAR(20) NOT NULL AFTER `Account_no`;

//modfification
ALTER TABLE `bdetails` CHANGE `Account_no` `Account_no` VARCHAR(20) NOT NULL;

modifying bank table
ALTER TABLE `bdetails` CHANGE `Submitted_at` `Submitted_at` YEAR NOT NULL;



//adding the statistics table
CREATE TABLE `usaa`.`statistics` ( `id` INT NOT NULL AUTO_INCREMENT , `year` YEAR NOT NULL , `girls` INT NOT NULL , `boys` INT NOT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;

