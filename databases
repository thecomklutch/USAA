//notofication table
CREATE TABLE `usaa`.`Notifications` ( `id` INT NOT NULL AUTO_INCREMENT , `receiver` VARCHAR(11) NOT NULL , `message` VARCHAR(255) NOT NULL , `status` ENUM("read", "unread") NOT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;

//adding the column in the posts databse
ALTER TABLE `posts` ADD `year` VARCHAR(11) NOT NULL AFTER `created_by`;

//adding a bank account column in the user's table
ALTER TABLE `users` CHANGE `message` `bankaccount` ENUM("Yes", "no") CHARACTER SET latin1 COLLATE latin1_swedish_ci NOT NULL;

//universities database
CREATE TABLE `usaa`.`details` ( `id` INT NOT NULL AUTO_INCREMENT , `universities` VARCHAR(255) NOT NULL , PRIMARY KEY (`id`)) ENGINE = InnoDB;

